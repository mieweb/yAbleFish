{
  "name": "@yabelfish/browser-client",
  "version": "0.1.0",
  "description": "Browser-based Monaco Editor with embedded LSP for yAbel medical documentation",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "cd ../.. && eslint packages/browser-client/src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "cd ../.. && eslint packages/browser-client/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" || true",
    "format:check": "prettier --check \"src/**/*.ts\" || true",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet for browser-client\""
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "monaco-languageclient": "^8.1.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-jsonrpc": "^8.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "monaco-editor",
    "lsp",
    "medical",
    "yabel",
    "browser"
  ],
  "license": "MIT"
}
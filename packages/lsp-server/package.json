{
  "name": "@yabelfish/lsp-server",
  "version": "0.1.0",
  "description": "Core LSP server for yAbel medical documentation format",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "cd ../.. && eslint packages/lsp-server/src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "cd ../.. && eslint packages/lsp-server/src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" || true",
    "format:check": "prettier --check \"src/**/*.ts\" || true",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet for lsp-server\""
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "lsp",
    "medical",
    "yabel",
    "language-server"
  ],
  "license": "MIT"
}